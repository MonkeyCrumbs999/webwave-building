{
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "copy:html": "rimraf ./dist/*.html && ncp ./src/*.html ./dist",
    "copy:img": "rimraf ./dist/img && ncp ./src/img ./dist/img",
    "copy:redirects": "copy src\\_redirects dist",
    "build": "npm run build:css && npm run copy:html && npm run copy:img && npm run copy:redirects"
  },
  "devDependencies": {
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.4"
  }
}
